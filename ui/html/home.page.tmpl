{{template "base" .}}

{{define "title"}}Home{{end}}

{{define "main"}}
<h2>Family Log</h2>
	{{if .Memories}}
	<table>
		<tr>
			<th>Title</th>
			<th>Created</th>
			<th>ID</th>
		</tr>
		{{range .Memories}}
		<tr>
			<td><a href='/memory?id={{.ID}}'>{{.Title}}</a></td>
			<td>{{humanDate .Created}}</td>
			<td>{{.ID}}</td>
		</tr>
		{{end}}
	</table>
	{{else}}
	<p>Nothing to see here... yet!</p>
	{{end}}
{{end}}
